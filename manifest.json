{
  "manifest_version": 3,
  "name": "Basic Chrome Extension",
  "version": "1.0",
  "description": "A basic Chrome extension example",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "images/icon.svg"
  },
  "permissions": [
    "activeTab",
    "storage"
  ],
  "web_accessible_resources": [{
    "resources": ["prompt.txt"],
    "matches": ["<all_urls>"]
  }],
  "icons": {
    "128": "images/icon.svg"
  }
} 